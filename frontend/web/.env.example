# Environment template file
# Copy this to .env.local and fill in the values

# Backend API URLs
NEXT_PUBLIC_HOLDER_API_URL=http://localhost:8031
NEXT_PUBLIC_ISSUER_API_URL=http://localhost:8030
NEXT_PUBLIC_VERIFIER_API_URL=http://localhost:8032
NEXT_PUBLIC_API_URL=http://localhost:8031
NEXT_PUBLIC_WS_URL=ws://localhost:8031

# Application Configuration
NEXT_PUBLIC_APP_NAME=CryptLocker
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_QR_SCANNING=true

# Session Configuration (milliseconds)
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_TOKEN_REFRESH_INTERVAL=300000
