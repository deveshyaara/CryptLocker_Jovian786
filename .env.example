# Example Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===== Environment =====
NODE_ENV=development
LOG_LEVEL=debug

# ===== Indy Ledger Configuration =====
INDY_GENESIS_URL=http://localhost:9000/genesis
INDY_POOL_NAME=local_pool
INDY_NETWORK=local  # Options: local, sovrin_staging, sovrin_mainnet

# ===== Agent Ports =====
# Issuer Agent
ISSUER_AGENT_PORT=8020
ISSUER_ADMIN_PORT=8030

# Holder Agent
HOLDER_AGENT_PORT=8021
HOLDER_ADMIN_PORT=8031

# Verifier Agent
VERIFIER_AGENT_PORT=8022
VERIFIER_ADMIN_PORT=8032

# ===== Database Configuration =====
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ssi_vault
POSTGRES_USER=ssi_user
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION_use_strong_password_here

# ===== IPFS Configuration =====
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080
IPFS_CLUSTER_ENABLED=false

# ===== Security Keys (CHANGE ALL OF THESE!) =====
# Generate with: openssl rand -hex 32
WALLET_KEY=CHANGE_ME_TO_SECURE_RANDOM_64_CHARACTER_HEX_KEY_0123456789abcdef
JWT_SECRET=CHANGE_ME_TO_SECURE_RANDOM_JWT_SECRET_0123456789abcdef01234567
API_KEY_ISSUER=CHANGE_ME_issuer_api_key_0123456789abcdef012345678901234567
API_KEY_VERIFIER=CHANGE_ME_verifier_api_key_0123456789abcdef0123456789012
API_KEY_ADMIN=CHANGE_ME_admin_api_key_0123456789abcdef01234567890123456

# ===== DID Seeds (32-byte seeds) =====
# For reproducible DIDs in development (NEVER use in production)
ISSUER_DID_SEED=issuer_seed_000000000000000000000
VERIFIER_DID_SEED=verifier_seed_0000000000000000000

# ===== Agent Configuration =====
AUTO_ACCEPT_REQUESTS=false
AUTO_RESPOND_CREDENTIAL_OFFER=false
AUTO_VERIFY_PRESENTATION=false
PRESERVE_EXCHANGE_RECORDS=true

# ===== Rate Limiting =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# ===== CORS Configuration =====
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# ===== Monitoring & Logging =====
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT=json  # Options: json, text
SENTRY_DSN=  # Optional: Sentry error tracking

# ===== Frontend Configuration =====
VITE_API_BASE_URL=http://localhost:8030
VITE_ENABLE_DEBUGGING=true

# ===== Backup Configuration =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# ===== Feature Flags =====
ENABLE_REVOCATION=true
ENABLE_ZKP_PREDICATES=true
ENABLE_IPFS_STORAGE=true
ENABLE_BULK_ISSUANCE=false

# ===== Development Tools =====
ENABLE_SWAGGER_UI=true
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_GRAPHQL_PLAYGROUND=true

# ===== Production Overrides (uncomment for production) =====
# NODE_ENV=production
# LOG_LEVEL=info
# AUTO_ACCEPT_REQUESTS=false
# ENABLE_DEBUG_ENDPOINTS=false
# ENABLE_SWAGGER_UI=false
